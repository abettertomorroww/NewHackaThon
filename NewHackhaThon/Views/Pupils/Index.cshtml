@model IEnumerable<NewHackhaThon.Models.Pupils>

@{
    ViewData["Title"] = "Index";
}

<h1>Список школьников</h1>


<form asp-action="Index" method="get">
    <div class="form-actions no-color">

        <p>
            Поиск по имени: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Поиск" class="btn btn-default" />
            <a asp-action="Index">Назад</a>
        </p>

    </div>
</form>
<table class="table">
    <thead>
        <tr>


        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["Name_SortParm"]">@Html.DisplayNameFor(model => model.Pupils_Summ)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["Name_SortParm"]">@Html.DisplayNameFor(model => model.Pupils_Name)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["Pupils_SurnameSortParm"]">@Html.DisplayNameFor(model => model.Pupils_Surname)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["Pupils_SurnameSortParm"]">@Html.DisplayNameFor(model => model.Pupils_School)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["Pupils_SurnameSortParm"]">@Html.DisplayNameFor(model => model.Pupils_Class)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["Pupils_CityParm"]">@Html.DisplayNameFor(model => model.Pupils_City)</a>
            </th>
            


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pupils_Summ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pupils_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pupils_Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pupils_School)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pupils_Class)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pupils_City)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PupilsId">Редактировать</a><br />
                <a asp-action="Delete" asp-route-id="@item.PupilsId">Удалить</a>
            <td />
            <td>
                <a asp-action="About" asp-route-id="@item.PupilsId">Подробнее</a>
            </td>
        </tr>
        }
    </tbody>
</table>
