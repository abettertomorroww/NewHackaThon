<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VAP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .container {
            max-width: 1300px;
        }

        .table thead th {
            border-bottom: none;
            box-sizing: border-box;
            padding-top: 15px;
            padding-bottom: 15px;
        }

        .filterBar, .searchBar {
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
        }

        .title, .filterBar {
            margin-bottom: 18px;
        }

        .searchBar {
            width: 410px;
        }

        .myCustomInput {
            border: 1px solid #cecece;
            border-radius: 7px;
            padding-left: 5px;
        }

        .myCustomLink {
            color: #1c6cd9;
            border: 1px solid #1c6cd9;
            border-radius: 5px;
            padding: 4px 11px;
            font-size: 14px;
        }

            .myCustomLink:hover {
                color: whitesmoke;
                text-decoration: none;
                background-color: #1c6cd9;
            }

        .userInfo {
            margin-bottom: -40px;
        }

        .featurette {
            justify-content: space-between;
            flex-wrap: nowrap;
        }

            .featurette img {
                border-radius: 5px;
                box-shadow: 7px 7px 5px 0px rgba(50, 50, 50, 0.5);
            }

        .gameBlock {
            position: relative;
            width: 500px;
            height: 500px;
        }

            .gameBlock img {
                object-fit: contain;
            }

        .btnBlock {
            position: absolute;
            top: 4%;
            left: 46%;
        }

        .btnBlock2 {
            position: absolute;
            top: 28.3%;
            left: 11.8%;
        }

        .btnBlock3 {
            position: absolute;
            top: 54.4%;
            left: 38.5%;
        }

        .btnBlock4 {
            position: absolute;
            top: 29.1%;
            left: 95.2%;
        }

        .btnBlock5 {
            position: absolute;
            top: 28.9%;
            left: 65%;
        }

        .btnBlock6 {
            position: absolute;
            top: 79%;
            left: 8%;
        }

        .btnBlock7 {
            position: absolute;
            top: 58.4%;
            left: 81.6%;
        }

         .img1 {
            position: absolute;
            width: 7%;
            left: 13%;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">VAP</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">

                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-clipboard-check" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z" />
                            <path fill-rule="evenodd" d="M9.5 1h-3a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h3a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3zm4.354 7.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 9.793l2.646-2.647a.5.5 0 0 1 .708 0z" />
                        </svg>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Students" asp-action="Index">Студенты</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Pupils" asp-action="Index">Школьники</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Checks" asp-action="Index">Родители</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Teachers" asp-action="Index">Учителя</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Profiles" asp-action="Create">Профиль</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - NewHackhaThon - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
